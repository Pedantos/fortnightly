<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorSurface">@color/fortnightly_white</item>
        <item name="colorPrimary">@color/fortnightly_white</item>
        <item name="colorPrimaryDark">@color/fortnightly_grey</item>
        <item name="colorAccent">@color/fortnightly_purple</item>
        <item name="android:textColorPrimary">@color/fortnightly_black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/fortnightly_black</item>
    </style>

</resources>
